  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "grafana/grafana:2.1.3",
      "network": "BRIDGE",
      "parameters": [
        { "key": "log-driver", "value": "gelf" },
        { "key": "log-opt",    "value": "gelf-tag=grafana" },
        { "key": "log-opt",    "value": "gelf-address=udp://10.10.254.129:12201" }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "servicePort": 0,
          "protocol": "tcp"
        }
      ]
    }
